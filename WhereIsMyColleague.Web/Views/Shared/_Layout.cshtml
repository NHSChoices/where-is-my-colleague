<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          @Html.ActionLink("Where are your colleagues?", "Status", "Users", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        @*<br/>*@
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Status", "Status", "Users")</li>
            <li>@Html.ActionLink("Register", "Register", "Users")</li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Login/Signup", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container body-content">
      @RenderBody()
      <hr />
      <footer class="col-xs-12">
        <p>&copy; @DateTime.Now.Year </p>
      </footer>
    </div>
  </div>
  
  @Scripts.Render("~/bundles/jquery")
  @*@Scripts.Render("~/bundles/wfhscripts")*@
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>