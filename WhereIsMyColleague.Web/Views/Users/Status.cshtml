@model IEnumerable<WhereIsMyColleague.Web.Models.User>

@{
    ViewBag.Title = "User List Page";
    var dateTime = DateTime.Now.ToShortDateString();
}



@if (@Model.Any())
{
    foreach (var user in @Model.Where(user => user.TimeStamp == dateTime))
    {
        if (user.Duration.ToString() == "AllDay")
        {
            <li>@user.Name is located @@ @Html.DisplayFor(modelItem => user.Location), @Html.DisplayFor(modelItem => user.Duration)</li>
        }
        else
        {
            <li>@user.Name is located @@ @Html.DisplayFor(modelItem => user.Location) in the @Html.DisplayFor(modelItem => user.Duration)</li>
        }
    }
}