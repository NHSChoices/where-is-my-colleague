@model WhereIsMyColleague.Web.Models.LocalPasswordModel

<h3 class="add-external-header">Change password</h3>

@using (Html.BeginForm("Manage", "Account"))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary()

  <fieldset class="form-font">
        @Html.LabelFor(m => m.OldPassword)<br/>
        @Html.PasswordFor(m => m.OldPassword)<br/><br/>

        @Html.LabelFor(m => m.NewPassword)<br/>
        @Html.PasswordFor(m => m.NewPassword)<br/><br/>

        @Html.LabelFor(m => m.ConfirmPassword)<br/>
        @Html.PasswordFor(m => m.ConfirmPassword)<br/><br/>

    <input type="submit" value="Change password" />
  </fieldset>
}